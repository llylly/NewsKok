<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/noNews"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/title_size"
        android:text="@string/news_empty"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/engLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:background="@drawable/news_item">

        <ImageView
            android:id="@+id/engStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_uncheck"
            android:layout_gravity="left"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:id="@+id/eng0Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/eng1Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/engTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_size"
                    android:textColor="@color/colorTitle"
                    android:text="Title"/>

                <TextView
                    android:id="@+id/engTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/note_size"
                    android:textColor="@color/colorTime"
                    android:text="time"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/engImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/loading_png"/>

        </LinearLayout>

        <TextView
            android:id="@+id/engSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="right"
            android:textColor="@color/colorCorner"
            android:textSize="@dimen/note_size"
            android:text="region origin"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/chnLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="20dp"
        android:background="@drawable/news_item">

        <ImageView
            android:id="@+id/chnStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/star_uncheck"
            android:layout_gravity="left"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/chnTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_size"
            android:textColor="@color/colorTitle"
            android:text="Title"
            />

        <TextView
            android:id="@+id/chnTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/note_size"
            android:textColor="@color/colorTime"
            android:text="time"/>

        <ImageView
            android:id="@+id/chnLine"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:src="@drawable/horizontal_line"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/chn0Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chnImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:src="@drawable/loading_png"
                android:scaleType="centerInside"/>

            <LinearLayout
                android:id="@+id/chn1Layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chnIntro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/intro_size"
                    android:textColor="@color/colorIntro"
                    android:text="Introduction" />

                <TextView
                    android:id="@+id/chnSource"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:textColor="@color/colorCorner"
                    android:textSize="@dimen/note_size"
                    android:text="region origin"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>